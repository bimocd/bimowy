{
	"$schema": "https://biomejs.dev/schemas/2.3.15/schema.json",
	"assist": {
		"actions": {
			"source": {
				"recommended": true,
				"organizeImports": "on",
				"useSortedAttributes": "off",
				"useSortedKeys": "off",
				"useSortedProperties": "on"
			}
		}
	},
	"files": {
		"ignoreUnknown": true,
		"includes": ["**", "!node_modules", "!.next", "!dist", "!build", "src/playground/"]
	},
	"formatter": {
		"enabled": true,
		"indentStyle": "tab",
		"indentWidth": 2,
		"lineWidth": 100
	},
	"linter": {
		"domains": {
			"next": "recommended",
			"react": "recommended"
		},
		"enabled": true,
		"rules": {
			"a11y": {
				"useKeyWithClickEvents": "off",
				"noStaticElementInteractions": "off",
				"useValidAnchor": "off"
			},
			"complexity": {
				"noUselessFragments": "off",
				"noBannedTypes": "off",
				"useLiteralKeys": "off"
			},
			"correctness": {
				"noUnusedImports": {
					"fix": "safe",
					"level": "on",
					"options": {}
				},
				"useExhaustiveDependencies": "off"
			},
			"performance": {
				"noAccumulatingSpread": "off",
				"noDynamicNamespaceImportAccess": "off"
			},
			"recommended": true,
			"style": {
				"noNonNullAssertion": "warn"
			},
			"suspicious": {
				"noArrayIndexKey": "off",
				"noDocumentCookie": "off",
				"noExplicitAny": "warn",
				"noUnknownAtRules": "off"
			}
		}
	},
	"vcs": {
		"enabled": true,
		"clientKind": "git",
		"useIgnoreFile": true
	},
	"javascript": {
		"formatter": {
			"trailingCommas": "none"
		}
	},
	"css": {
		"parser": {
			"tailwindDirectives": true
		}
	}
}
